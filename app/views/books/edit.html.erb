<h2>Editing Book</h2>
<!-- エラーメッセージ -->
<% if @book.errors.any? %>
	<div class="error_message">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@book, url:book_path(params[:id])) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Update Book' %>
<% end %>
<h4><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></h4>
