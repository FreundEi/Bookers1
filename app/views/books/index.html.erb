<p id="notice">
	<%= notice %>
</p>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<% @books.each do |book| %>
	<tbody>
			<th><%= book.title %></th>
			<th><%= book.body %></th>
			<th><%= link_to "Show", book %></th>
			<th><%= link_to "Edit", edit_book_path(book.id) %></th>
		 	<th><%= link_to "Destroy", book, method: :delete, data: {confirm: "Are you sure?"} %></th>
    </tbody>
    <% end %>
</table>


	<h2>New book</h2>
<!-- エラーメッセージ -->
<% if @book.errors.any? %>
	<div class="error_message">
		<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			    <li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

    <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %>
    <% end %>
